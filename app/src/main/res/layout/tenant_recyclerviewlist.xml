<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:cardCornerRadius="10dp"
        android:elevation="8dp"
        android:layout_margin="4dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_tenant_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:backgroundTint="@color/babyBlue"
        app:cardCornerRadius="10dp"
        android:elevation="8dp"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Img_tenant_apartment"
                android:layout_width="380dp"
                android:layout_height="250dp"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_tenant_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_tenant_favor2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="visible"
                    android:background="@drawable/ic_baseline_favorite_shadow_24" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_tenant_message2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="visible"
                    android:background="@drawable/ic_baseline_message_shadow_24" />


            </LinearLayout>

            <TextView
                android:id="@+id/txt_tenant_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_tenant_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_tenant_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:visibility="invisible" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>
