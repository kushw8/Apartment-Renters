<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="215dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/babyBlue"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_adminusers"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_baseline_delete_24"/>


            <TextView
                android:id="@+id/txt_adminusersid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_adminusersfname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/txt_adminusersid"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/txt_adminuserssname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/txt_adminusersfname"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/txt_adminusersemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/txt_adminuserssname"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/txt_adminusersphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/txt_adminusersemail"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>