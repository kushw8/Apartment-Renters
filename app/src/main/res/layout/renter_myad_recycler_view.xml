<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:id="@+id/cardview_renter_myad"
    android:layout_margin="10dp"
    android:padding="5dp"
    app:cardCornerRadius="20dp"
    android:elevation="8dp"
    android:backgroundTint="#d4dcf2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        app:cardCornerRadius="20dp"
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#d4dcf2"
        android:layout_margin="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <ImageView
                android:id="@+id/Img_renter_apartment"
                android:layout_width="378dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_myads"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="350dp"
                android:layout_marginTop="20dp"
                app:menu="@menu/imagetoolbarmenu"/>


            <TextView
                android:id="@+id/txt_titlemyads"
                android:layout_marginTop="15dp"
                android:layout_below="@id/Img_renter_apartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/txt_pricemyads"
                android:layout_marginTop="15dp"
                android:layout_below="@id/txt_titlemyads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_placemyads"
                android:layout_marginTop="15dp"
                android:layout_below="@id/txt_pricemyads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_descriptionmyads"
                android:layout_below="@id/txt_placemyads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:visibility="invisible" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>

</LinearLayout>