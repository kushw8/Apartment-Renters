<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".SendAnnouncements"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        android:backgroundTint="#d4dcf2"
        android:elevation="15dp"
        app:cardElevation="10dp"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="35dp"
        android:layout_gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send Announcements"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_margin="40dp"/>

            <EditText
                android:id="@+id/edt_txt_title_announcement"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:layout_margin="10dp"
                android:paddingStart="12dp"
                android:background="@drawable/input_design3"
                android:inputType="textPersonName"
                android:text="Title"
                tools:layout_editor_absoluteX="89dp"
                tools:layout_editor_absoluteY="142dp" />

            <EditText
                android:id="@+id/edt_txt_description_announcement"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="170dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/input_design3"
                android:text="Description"
                android:paddingStart="12dp"
                tools:layout_editor_absoluteX="90dp"
                tools:layout_editor_absoluteY="228dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_send_announcment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/input_design2"
                android:text="Send"
                android:textColor="#FFFFFF"
                tools:layout_editor_absoluteX="115dp"
                tools:layout_editor_absoluteY="330dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>