<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foregroundTint="#82C4B0"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewadmin"
        app:cardCornerRadius="20dp"
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/Img_admin_apartmentmyads"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:background="#3a5ebf"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_admin_myads"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="350dp"
                android:layout_marginTop="20dp"
                app:menu="@menu/imagetoolbarmenu"/>


            <TextView
                android:id="@+id/txt_admin_titlemyads"
                android:layout_marginTop="15dp"
                android:layout_below="@id/Img_admin_apartmentmyads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/txt_admin_pricemyads"
                android:layout_marginTop="15dp"
                android:layout_below="@id/txt_admin_titlemyads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_admin_placemyads"
                android:layout_marginTop="15dp"
                android:layout_below="@id/txt_admin_pricemyads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_admin_descriptionmyads"
                android:layout_below="@id/txt_admin_placemyads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:visibility="invisible" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>