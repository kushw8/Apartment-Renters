<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_layout_user_reports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/blue3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/Black"
            android:paddingLeft="35dp"
            android:id="@+id/txt_view_user_reports_date"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/Black"
            android:layout_marginTop="10dp"
            android:paddingLeft="35dp"
            android:id="@+id/txt_view_user_reports_username"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/Black"
            android:layout_marginTop="10dp"
            android:paddingLeft="35dp"
            android:id="@+id/txt_view_user_reports_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/Black"
            android:layout_marginTop="10dp"
            android:paddingLeft="35dp"
            android:id="@+id/txt_view_user_reports_description"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_view_user_chat"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="right"
                android:visibility="invisible"
                android:background="@drawable/ic_baseline_chat_bubble_outline_24"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>